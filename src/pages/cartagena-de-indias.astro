import Layout from "../layouts/Layout.astro"
---
<Layout>
    <Navbar />
    <BreadcrumbCCartagenadeIndias />
    <section class="pt-12 pb-20 px-6 bg-white min-h-screen">
        <div class="max-w-4xl mx-auto">
            <div class="space-y-10 text-gray-700 text-lg">
                <!-- Día 1 -->
                <div class="bg-gray-50 rounded-xl p-6 shadow-sm">
                    <h2 class="text-2xl font-bold text-blue-800 border-b border-red-400 pb-2 mb-4">
                        DIA 1: LIMA-CARTAGENA DE INDIAS/PASEO EN CHIVAS
                    </h2>
                    <ul class="space-y-3 text-gray-800 list-disc list-inside">
                        <li><strong>07:00 hrs:</strong> Recepción en Lima. Traslado al aeropuerto en trasporte exclusivo de MOVIL BUS.</li>
                        <li><strong>08:00 hrs:</strong> Llegada al aeropuerto. Atención personalizada LATAM GRUPOS - EQUIPAJE: maleta de carry on de 12kg para bodega más una mochila de 10kg para cabina</li>
